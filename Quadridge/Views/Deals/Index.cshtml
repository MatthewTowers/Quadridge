
@model IEnumerable<Quadridge.Models.Deal>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deals</h2>

@if (!Model.Any())
{
    <p>We don't have any deals</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Clients</th>
                <th>Company</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var deal in Model)
            {
                <tr>
                    <td>@Html.ActionLink(deal.Name, "Details", "Deals", new { id = deal.DealId }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}
